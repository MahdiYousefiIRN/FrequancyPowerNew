@model MVCApp_PowerFrequency.Models.PowerFrequencyData

@{
    ViewData["Title"] = "Log Frequency Data";
}

<h2>@ViewData["Title"]</h2>
<h2 class="text-center">Welcome to Power Monitoring System</h2>

<div class="text-center mt-4">
    <a href="@Url.Action("LiveFrequency", "Home")" class="btn btn-primary btn-lg">
        مشاهده مانیتورینگ فرکانس 🔍
    </a>
</div>
<!-- نمایش پیام‌ها -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<form method="post" asp-controller="Home" asp-action="LogFrequency">
    <div class="row">
        <!-- نام پست نیروگاهی -->
        <div class="col-md-6 form-group">
            <label asp-for="PostName">Power Plant Post Name</label>
            <input asp-for="PostName" class="form-control" placeholder="Enter Power Plant Name" required />
            <span asp-validation-for="PostName" class="text-danger"></span>
        </div>

        <!-- فرکانس -->
        <div class="col-md-6 form-group">
            <label asp-for="Frequency">Frequency (Hz)</label>
            <input asp-for="Frequency" class="form-control" placeholder="Enter Frequency" step="0.01" required />
            <span asp-validation-for="Frequency" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <!-- تاریخ -->
        <div class="col-md-6 form-group">
            <label for="Date">Date</label>
            <input asp-for="Date" class="form-control" type="date" required />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <!-- زمان -->
        <div class="col-md-6 form-group">
            <label for="Time">Time</label>
            <input asp-for="Time" class="form-control" type="time" required />
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Power">Power</label>
        <input asp-for="Power" class="form-control" placeholder="Enter Power" required />
        <span asp-validation-for="Power" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
